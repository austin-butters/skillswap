{
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "es2020", 
    "jsx": "react-jsx",
    "module": "ES2020",
    "moduleResolution": "Bundler", 
    "noEmit": true,
    "isolatedModules": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "skipLibCheck": true,

     /* Paths for importing */
    "baseUrl": ".",
    "paths": {
      "#models": ["models/index.ts"],
      "#models/*": ["models/*"],
      "#server-constants": ["server/utils/constants"],
      "#client-constants": ["client/utils/constants"],
      "#components": ["client/components/index.ts"],
      "#components/*": ["client/components/*"]
    }
  }
}